<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/dark_blue"
    tools:context=".landlord_detailsPage"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/pgImage"
        android:layout_width="match_parent"
        android:cropToPadding="true"
        android:layout_height="300dp"
        android:paddingVertical="5dp"
        android:paddingHorizontal="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_gray"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pgName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Title"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/delete_listing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/primary_yellow"
            android:text="delete"
            app:cornerRadius="17dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/pgDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="5"
        android:padding="16dp"
        android:scrollbars="vertical"
        android:textColor="@color/white"
        android:scrollHorizontally="false"
        android:text="Description"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/pgLocation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/white"
        android:padding="16dp"
        android:text="Location"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/pgAmenities"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Amenities"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/pgPrice"
        android:layout_width="match_parent"
        android:layout_height="305dp"
        android:textColor="@color/white"
        android:padding="16dp"
        android:text="Price"
        android:textSize="24sp" />
</LinearLayout>
